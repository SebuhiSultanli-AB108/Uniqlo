@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Sliders</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <a class="btn btn-primary" style="margin-bottom: 2%" asp-controller="Slider" asp-action="Create">Create</a>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Subtitle</th>
                        <th>Link</th>
                        <th>IsDeleted</th>
                        <th colspan="2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                            <td><img style="max-width: 150px; max-height: 75px" src="~/imgs/sliders/@item.ImageUrl" alt="Alternate Text" /></td>
                        <td>@item.Title</td>
                        <td>@item.Subtitle</td>
                        <td>@item.Link</td>
                        <td>@item.IsDeleted</td>
                        <td>
                            <a class="btn btn-success"
                               asp-action="Update" asp-route-id="@item.Id">
                                Update
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-danger"
                               asp-action="Delete" asp-route-id="@item.Id">
                                Delete
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

