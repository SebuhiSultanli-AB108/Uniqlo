@model HomeVM 
@{
    ViewData["Title"] = "Home";
}
    <!-- Start Slider Area -->
    <div class="slider__container slider--four">
        <div class="slider__activation__wrap owl-carousel owl-theme">
             @foreach (var item in Model.Sliders)
        {
            
                <!-- Start Single Slide -->
                <div class="slide slider__fixed--height" style="
                  background: rgba(0, 0, 0, 0) url(../imgs/sliders/@item.ImageUrl) no-repeat
                    scroll center center / cover;">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-9 offset-sm-3 col-md-6 offset-md-6 col-lg-5 offset-lg-7">
                                <div class="slider__content">
                                    <div class="slider__inner">
                                        <h1>@item.Title</h1>
                                        <h4>@item.Subtitle</h4>
                                        <div class="slider__btn">
                                           <a class="htc__btn" href="cart.html">shop now</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Single Slide -->
        }
            
        </div>
    </div>
    <!-- Start Slider Area -->
    <div class="custop__container bg__cat--2 mt--100">
        <div class="popular__product--2">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="section__title section__title--2 text-center">
                            <h2 class="title__line">Popular Products</h2>
                            <p>
                                Lorem ipsum dolor sit amet consectetur adipisicing elit sed
                                do eiusmod temp incididunt ut labore et dolore magna aliqua.
                            </p>
                        </div>
                    </div>
                </div>
                            <div class="tab-contet shop__grid__view__wrap">
                                <!-- Start Single View -->
                                <div role="tabpanel" id="grid-view" class="row single-grid-view tab-pane  active clearfix">
                                    @foreach (var item in Model.Products)
                                    {
                                        <!-- Start Single Product -->
                                        <div class="col-md-4 col-lg-4 col-sm-12">
                                            <div class="product">
                                                <div class="product__inner">
                                                    <div class="pro__thumb">
                                                        <a asp-action="Details" asp-controller="Shop" asp-route-id="@item.Id">
                                                            <img src="~/imgs/products/@item.CoverImage" alt="product images">
                                                        </a>
                                                    </div>
                                                    <div class="add__to__wishlist">
                                                        <a data-bs-toggle="tooltip" title="Add To Wishlist" class="add-to-cart" href="wishlist.html"><span class="ti-heart"></span></a>
                                                    </div>
                                                </div>
                                                <div class="product__details">
                                                    <h2><a href="product-details.html">@item.Name</a></h2>
                                                    <ul class="product__price">
                                                        <li class="old__price">$@item.SellPrice</li>
                                                        <li class="new__price">$@(item.SellPrice - item.SellPrice * item.Discount / 100)</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- End Single Product -->
                                    }
                                </div>
                                <!-- End Single View -->
                            </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Filter Menu -->
